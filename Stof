class Stof
{
 
  String navn;
  String enhed;
  float vaerdi;
  float startVaerdi;
  float tid;
  int reaktionsOrden;
  float halveringsTid;
  float cutoff;
  
  public Stof(String navn, String enhed, float vaerdi, float startVaerdi, int orden, float halveringsTid,float cutoff)
  {
    this.navn = navn;
    this.enhed = enhed;
    this.vaerdi = vaerdi;
    this.startVaerdi = startVaerdi;
    tid = 0;
    reaktionsOrden = orden;
    this.halveringsTid = halveringsTid;
    this.cutoff = cutoff;
  }
  
  public void Update()
  {
    if(reaktionsOrden == 1)
    {
      float k = log(2)/halveringsTid;
      vaerdi = startVaerdi*exp(k*tid*(-1));
    }
    else if(reaktionsOrden == 0)
    {
      float k = startVaerdi/(2*halveringsTid);
      vaerdi = -k*tid+startVaerdi;
    }
    
  }
  
  public void Add(float antal)
  {
    tid = 0;
    vaerdi += antal;
    startVaerdi = vaerdi;
  }
  
}
